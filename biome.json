{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "files": {
    "ignore": [
      "back-links.json",
      "zz-chop-logs/**",
      "published-chop-logs/**",
      "_ig66/ig66-export.json",
      "eulogy.json",
      "assets/**",
      "**/*.js",
      "**/*.jsx",
      ".cursor/**",
      "_site/**",
      "node_modules/**",
      "search.json",
      ".markdownlint.json",
      "**/*.md",
      "test-results/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off"
      },
      "style": {
        "noParameterAssign": "off"
      }
    }
  }
}
