# Layer 6: Ruby and Jekyll
FROM claude-code:layer-05-python AS jekyll-layer

ENV DEBIAN_FRONTEND=noninteractive

# Install Ruby and Jekyll
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        ruby-full \
        ruby-bundler \
        && apt-get clean && \
        rm -rf /var/lib/apt/lists/*

RUN gem install jekyll bundler

# Save this layer
FROM jekyll-layer AS layer-06-jekyll