# Layer 3: Claude CLI installation (for fast iteration)
FROM claude-docker:minimal

USER developer
WORKDIR /home/developer

# Use bash for RUN commands since zsh is in homebrew path
SHELL ["/bin/bash", "-c"]

# Install Claude CLI inside the container
RUN npm install -g @anthropic-ai/claude-code

WORKDIR /home/developer/gits
LABEL description="Claude CLI layer for testing"