# Layer 3: Development tools
FROM claude-code:layer-02-git AS dev-layer

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        pkg-config \
        libssl-dev \
        vim \
        neovim \
        tmux \
        zsh \
        jq \
        zip \
        unzip \
        && apt-get clean && \
        rm -rf /var/lib/apt/lists/*

# Save this layer
FROM dev-layer AS layer-03-dev